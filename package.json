{
  "name": "yuow",
  "version": "1.0.0-alpha.11",
  "keywords": [
    "unit of work",
    "repository",
    "ddd",
    "domain model"
  ],
  "description": "Generic implementation of Unit of Work and Repository patterns to build isolated domain model",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"**/*.{ts,js,json}\" --max-warnings=0",
    "lint:fix": "npm run lint -- --fix",
    "lint:fix-staged": "lint-staged",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "repository": "lsndr/yuow",
  "license": "MIT",
  "author": {
    "name": "lsndr",
    "email": "alexander@lsndr.me",
    "url": "https://lsndr.me"
  },
  "lint-staged": {
    "**/*.{js,ts,json} !(package-lock.json)": "eslint --fix --max-warnings=0"
  },
  "peerDependencies": {
    "knex": "^0.95.0 || ^1.0.0 || ^2.0.0"
  },
  "dependencies": {
    "emittery": "^0.13.1",
    "weak-identity-map": "^1.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.2.2",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.2.6",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^5.0.1",
    "semantic-release": "^21.1.1",
    "sqlite3": "^5.1.6",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "workspaces": [
    "examples/simple"
  ]
}
